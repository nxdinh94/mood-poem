rules_version = '2';

// DEVELOPMENT ONLY - CHỈ DÙNG ĐỂ SEED DATA
// SAU KHI SEED XONG, DEPLOY LẠI firestore.rules

service cloud.firestore {
  match /databases/{database}/documents {
    
    // User profile
    match /user-poem/{userId} {
      allow read, write: if true; // DEV ONLY
    }
    
    // User mood
    match /user-mood-poem/{userId}/{document=**} {
      allow read, write: if true; // DEV ONLY
    }
    
    // Poems - CHO PHÉP WRITE ĐỂ SEED
    match /poem-poem/{poemId} {
      allow read, write: if true; // DEV ONLY - KHÔNG AN TOÀN!
    }
  }
}
